                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Top 5 Tenants"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="By Sales"
                            android:textColor="@color/black"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <!--                 Use a graphical view library like MPAndroidChart -->

                    <com.github.mikephil.charting.charts.BarChart

                        android:id="@+id/top_5_tenants_bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_margin="5dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Category Sales"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <!-- Add the dropdown (Spinner) here -->
                    <Spinner
                        android:id="@+id/category_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:padding="10dp" />


                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/tenants_pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />
                    <!-- Use a graphical view library like MPAndroidChart -->
                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/legendScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tenants_pie_chart"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/legendLayout"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="vertical" />
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

